{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "edge-panel",
  "version": "0.1.0",
  "identifier": "dev.pages.koma.EdgePanel",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "edge-panel",
        "label": "main",
        "transparent": true,
        "hiddenTitle": true,
        "alwaysOnTop": true,
        "decorations": false,
        "resizable": false,
        "fullscreen": false,
        "acceptFirstMouse": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
